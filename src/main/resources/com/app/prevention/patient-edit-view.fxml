<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="450.0" minWidth="500.0" prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.prevention.controller.PatientEditController">
    <BorderPane prefHeight="500.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <VBox spacing="5.0" BorderPane.alignment="CENTER">
                <!-- CPF -->
                <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="cpfField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Name -->
                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Birth Date -->
                <Label text="Data de Nascimento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="birthDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- Address -->
                <Label text="Endereco:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <!-- Neighborhood -->
                <Label text="Bairro:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="neighborhoodField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <!-- City -->
                <Label text="Cidade:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <!-- SUS Number -->
                <Label text="Numero do Cartao do SUS:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="susNumberField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <HBox prefHeight="50.0" prefWidth="200.0" spacing="15.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Button minWidth="100.0" mnemonicParsing="false" onAction="#onClickSaveButton" text="Salvar" />
                  <Button minWidth="100.0" mnemonicParsing="false" onAction="#onClickCancelButton" text="Cancelar" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
